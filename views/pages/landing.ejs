<%- include('../partials/head') %>

<body class="bg-gradient-to-br from-pink-600 to-gray-700 font-text flex flex-col min-h-screen">
    <header class="h-40 flex-col flex items-center justify-center text-gray-300">
        <h1 class="capitalize font-light text-center my-2">
            my to-do list
        </h1>
        <small class="text-xs font-light">
            welcome to the simple to-do list
        </small>
    </header>
    <main class="flex-1">
        <form action="/login" method="post" class="w-5/6 mx-auto max-w-md" autocomplete="off">
            <strong class="text-white uppercase block text-center text-xl font-light">Login</strong>
            <% if(err) {%>
            <small class=" mt-2 block text-center text-xs text-gray-200 capitalize">
                <%= err %>
            </small>
            <% } %>
            <section class="flex flex-col my-2">
                <label 
                    class="text-gray-300 text-sm capitalize mb-0.5"
                    for="username">
                    username
                </label>
                <input 
                    class="p-2 outline-none focus:outline-none rounded-sm shadow focus:shadow-2xl focus:scale-105 transform transition-all"
                    placeholder="Your User Name"
                    type="text" 
                    autocomplete="off"
                    name="username" 
                    id="username">
            </section>
            <section class="flex flex-col my-2 relative">
                <label 
                    class="text-gray-300 text-sm capitalize mb-0.5"
                    for="password">
                    password
                </label>
                <input 
                    class="p-2 outline-none focus:outline-none rounded-sm shadow focus:shadow-2xl focus:scale-105 transform transition-all"
                    placeholder="Your Password"
                    type="password" 
                    autocomplete="off"
                    name="password" 
                    id="password">
                <button type="button" id="passwordTextToggler" class="absolute top-1/2 right-2 transform outline-none focus:outline-none text-gray-500 hover:text-pink-600">
                    <!-- show eye -->
                    <svg class="passwordMode hidden w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                    <!-- hide eye -->
                    <svg class="passwordMode w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path></svg>
                </button>
            </section>
            <section class="flex items-center justify-center">
                <button type="submit" class="my-4 p-3 w-1/3 max-w-xs text-white font-semibold uppercase text-sm bg-black tracking-wider outline-none focus:outline-none shadow hover:shadow-lg transition-all hover-translate-y-px hover:bg-white hover:text-black rounded-sm">login</button>
            </section>

            <small class="p-0.5 text-gray-300 block text-center text-xs my-2 capitalize">new user? click <a href="/register" class="underline hover:text-white">here</a> create account now</small>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>